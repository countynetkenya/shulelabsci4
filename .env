#---------------------------------------------------------------
# CodeIgniter 4 Environment Configuration
#---------------------------------------------------------------

# Set the environment mode: production | development | testing
CI_ENVIRONMENT = testing

#---------------------------------------------------------------
# APP CONFIGURATION
#---------------------------------------------------------------
app.baseURL = 'https://app.shulelabs.cloud/'
app.indexPage = ''
app.defaultLocale = en
app.timezone = 'Africa/Nairobi'

#---------------------------------------------------------------
# DATABASE SETTINGS
#---------------------------------------------------------------
database.default.hostname = localhost
database.default.database = shulelabs_staging
database.default.username = shulelabs_
database.default.password = Chura@17463
database.default.DBDriver = MySQLi
database.default.DBPrefix =
database.default.port = 3306
database.default.charset = utf8mb4
database.default.DBCollat = utf8mb4_unicode_ci
database.default.pConnect = false
database.default.strictOn = false
database.default.DBDebug = true

#---------------------------------------------------------------
# LOGGING & WRITABLE CONFIG
#---------------------------------------------------------------
logger.threshold = 9
logger.filePermissions = 0644
logger.dateFormat = 'Y-m-d H:i:s'

#---------------------------------------------------------------
# CACHE / SESSION
#---------------------------------------------------------------
cache.handler = file
cache.backupHandler = dummy
cache.storePath = writable/cache/

sessionDriver = CodeIgniter\Session\Handlers\FileHandler
sessionSavePath = writable/session
sessionMatchIP = false
sessionRegenerateDestroy = false

#---------------------------------------------------------------
# EMAIL (Optional)
#---------------------------------------------------------------
email.protocol = smtp
email.SMTPHost = mail.example.com
email.SMTPUser = user@example.com
email.SMTPPass = password
email.SMTPPort = 587
email.mailType = html
