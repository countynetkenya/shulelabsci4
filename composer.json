{
    "name": "shulelabs/codeigniter4-runtime",
    "description": "ShuleLabs CodeIgniter 4 runtime",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^8.2",
        "codeigniter4/framework": "^4.5",
        "ext-curl": "*",
        "ext-intl": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "ext-sqlite3": "*"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^10.5",
        "zircote/swagger-php": "^4.10"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Config\\": "app/Config/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Support\\": "tests/_support"
        }
    },
    "scripts": {
        "post-update-cmd": [
            "CodeIgniter\\ComposerScripts::postUpdate",
            "@composer dump-autoload"
        ],
        "post-install-cmd": ["CodeIgniter\\ComposerScripts::postInstall", "@composer dump-autoload"],
        "test": "phpunit --configuration=phpunit.ci4.xml",
        "openapi:build": "vendor/bin/openapi --format yaml --output docs/openapi.yaml docs/openapi"
    },
    "config": {
        "allow-plugins": {
            "codeigniter4/composer-installers": true
        },
        "sort-packages": true
    }
}
