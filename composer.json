{
    "name": "shulelabs/ci4-standalone",
    "type": "project",
    "description": "ShuleLabs CI4 Standalone - School Management System",
    "license": "proprietary",
    "require": {
        "php": "^8.3",
        "ext-bcmath": "*",
        "ext-gd": "*",
        "ext-intl": "*",
        "ext-mysqli": "*",
        "ext-pdo": "*",
        "ext-zip": "*",
        "codeigniter4/framework": "^4.5",
        "ramsey/uuid": "^4.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Config\\": "app/Config/",
            "Modules\\": "app/Modules/"
        },
        "files": [],
        "exclude-from-classmap": [
            "app/Modules/*/Database/Migrations/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Tests\\Ci4\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit -c phpunit.ci4.xml",
        "post-update-cmd": [
            "@php spark cache:clear"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
