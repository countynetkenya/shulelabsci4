{
    "name": "shulelabs/erp",
    "type": "project",
    "description": "Shulelabs School Management System with billing, inventory, payroll, QuickBooks, and student/teacher portals.",
    "license": "proprietary",
    "require": {
        "php": "^8.3",
        "ext-pdo": "*",
        "ext-mysqli": "*",
        "ext-intl": "*",
        "ext-gd": "*",
        "ext-bcmath": "*",
        "ext-zip": "*",
        "league/omnipay": "^3.2",
        "omnipay/paypal": "^3.0",
        "omnipay/stripe": "^3.1",
        "mpdf/mpdf": "^8.2.5",
        "phpoffice/phpspreadsheet": "^1.21",
        "quickbooks/v3-php-sdk": "^6.1",
        "ircmaxell/random-lib": "^1.2",
        "zircote/swagger-php": "^5.1",
        "doctrine/annotations": "^2.0",
        "mike42/escpos-php": "^4.0",
        "firebase/php-jwt": "^6.10",
        "ramsey/uuid": "^4.7",
        "guzzlehttp/guzzle": "^7.8",
        "google/apiclient": "^2.15",
        "symfony/yaml": "^6.0",
        "endroid/qr-code": "^4.8",
        "psr/http-factory": "^1.1",
        "codeigniter4/framework": "^4.5",
        "squizlabs/php_codesniffer": "^3.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.12"
    },
    "autoload": {
        "psr-4": {
            "App\\": [
                "application/",
                "ci4/app/"
            ],
            "App\\Services\\": "application/Services/",
            "SchoolOS\\": "ci4/app/",
            "Config\\": "ci4/app/Config/",
            "Modules\\": "ci4/app/Modules/"
        },
        "classmap": [
            "mvc/models",
            "application/Services"
        ],
        "files": [
            "ci4/docs/openapi/base.php",
            "ci4/docs/openapi/sprint1.php",
            "application/Support/Http/message_factory_compat.php"
        ],
        "exclude-from-classmap": [
            "mvc/controllers/",
            "mvc/controllers/api/",
            "mvc/controllers/api/v10/",
            "application/controllers/",
            "ci4/app/Modules/*/Database/Migrations/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Ci4\\": "ci4/tests/"
        }
    },
    "provide": {
        "php-http/message-factory-implementation": "1.0"
    },
    "replace": {
        "php-http/message-factory": "*"
    },
    "scripts": {
        "openapi:build": [
            "@php -r \"is_dir('ci4/docs/openapi') || mkdir('ci4/docs/openapi', 0777, true);\"",
            "vendor/bin/openapi --bootstrap vendor/autoload.php --format yaml --output ci4/docs/openapi.yaml ci4/docs/openapi"
        ],
        "check": "composer validate --no-check-publish && php -v && php -m",
        "lint": "vendor/bin/phpcs --standard=phpcs.xml.dist --ignore=ci4/app/Views/errors/* application ci4/app",
        "phpstan": "vendor/bin/phpstan analyse --memory-limit=1G",
        "test": "bash scripts/run-tests.sh",
        "ci": [
            "@lint",
            "@phpstan",
            "@test"
        ],
        "app:post-install": [
            "@php scripts/setup-directories.php"
        ],
        "post-install-cmd": [
            "@app:post-install"
        ],
        "post-update-cmd": [
            "@app:post-install"
        ]
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
