# ==============================================================================
# CODEIGNITER 4 ENVIRONMENT CONFIGURATION
# ==============================================================================
# These settings are for CodeIgniter 4 ONLY.
# CI3 is legacy and disabled - it will NOT read from this file.
# See README.md for migration guide.
# ==============================================================================

CI_ENVIRONMENT = development
app.baseURL = 'http://localhost:8080/'

# Security - IMPORTANT: Change this in production!
encryption.key = 'please-change-this-to-a-secure-random-key-32-chars-minimum'
ENCRYPTION_KEY = 'please-change-this-to-a-secure-random-key-32-chars-minimum'

JWT_SECRET = 'please-change-me'
JWT_ISSUER = 'shulelabs.local'
JWT_TTL_SECONDS = 3600
JWT_LEEWAY_SECONDS = 30
API_JWT_GUARD_ENABLED = false

# Database Configuration (CodeIgniter 4 only - CI3 is disabled)
# Use standard DB_* variables for CodeIgniter 4
DB_HOST = 'localhost'
DB_DATABASE = 'shulelabs'
DB_USERNAME = 'shulelabs'
DB_PASSWORD = 'shulelabs'
DB_DRIVER = 'MySQLi'
DB_PORT = 3306

# Session Configuration
SESSION_DRIVER = 'database'
SESSION_COOKIE_NAME = 'school'
SESSION_EXPIRATION = 7200
SESSION_SAVE_PATH = 'school_sessions'

# Redis cache (optional)
redis.default.host = '127.0.0.1'
redis.default.port = 6379

# Mail configuration (Mailhog for local dev)
email.fromEmail = 'no-reply@example.com'
email.fromName  = 'ShuleLabs'
email.protocol  = 'smtp'
email.SMTPHost  = 'localhost'
email.SMTPPort  = 1025

