# AI Orchestration Configuration
# Version: 2.0.0

# Environment
ORCHESTRATION_ENV=development

# Phase Configuration
ENABLE_PHASE_0=true  # Pre-flight validation
ENABLE_PHASE_1=true  # Database-first
ENABLE_PHASE_2=true  # Test-driven development
ENABLE_PHASE_3=true  # Progressive building
ENABLE_PHASE_4=true  # Integration
ENABLE_PHASE_5=true  # Deployment
ENABLE_PHASE_6=true  # Monitoring

# Validation Settings
VALIDATION_INTERVAL=300  # Continuous validation every 5 minutes (seconds)
AUTO_FIX_ENABLED=true    # Auto-fix common issues (permissions, dependencies)
STRICT_MODE=false        # Fail fast on any warning (not just errors)

# Database Settings
AUTO_MIGRATE=true        # Auto-run migrations in Phase 1
SEED_TEST_DATA=false     # Seed test data after migrations
DB_BACKUP_BEFORE_MIGRATE=true

# Testing Settings
RUN_TESTS_BEFORE_BUILD=true
MIN_CODE_COVERAGE=85     # Minimum test coverage percentage
FAIL_ON_COVERAGE_DROP=true
GENERATE_COVERAGE_HTML=true

# Build Settings
BUILD_MODE=progressive   # Options: progressive, parallel, sequential
MICRO_ITERATIONS=true    # Build one method at a time
CONTINUOUS_VALIDATION=true
AUTO_COMMIT_PER_FEATURE=true

# Deployment Settings
DEPLOY_TO_STAGING=true
AUTO_DEPLOY_ON_SUCCESS=false  # Requires manual approval
HEALTH_CHECK_TIMEOUT=30  # Seconds
ROLLBACK_ON_FAILURE=true
KEEP_RELEASES=5  # Number of previous releases to keep

# Monitoring Settings
ENABLE_ERROR_TRACKING=true
ENABLE_PERFORMANCE_MONITORING=true
ALERT_ON_ERROR_RATE=1.0  # Percentage
ALERT_ON_RESPONSE_TIME=200  # Milliseconds (p95)

# AI Settings
AI_PROVIDER=github-copilot
AI_MODEL=claude-sonnet-4.5
MAX_CONTEXT_LINES=50000
TEMPERATURE=0.2  # Lower for consistent code generation

# Git Settings
AUTO_COMMIT=true
AUTO_PUSH=false
BRANCH_STRATEGY=main  # Options: main, feature-branches
COMMIT_MESSAGE_PREFIX="feat(orchestration):"

# Reporting Settings
GENERATE_REPORTS=true
REPORT_FORMATS=markdown,html,json
REPORT_OUTPUT_DIR=docs/reports/orchestration

# Parallel Execution
MAX_PARALLEL_TRACKS=4
TRACK_A_FEATURES=auth,admin
TRACK_B_FEATURES=teacher,student
TRACK_C_FEATURES=finance,hr
TRACK_D_FEATURES=parent,communication

# Quality Gates
GATE_CODE_COVERAGE=85
GATE_CYCLOMATIC_COMPLEXITY=10
GATE_CODE_DUPLICATION=3
GATE_SECURITY_SCORE=A

# Notifications
NOTIFY_ON_START=false
NOTIFY_ON_SUCCESS=true
NOTIFY_ON_FAILURE=true
NOTIFICATION_CHANNELS=console,log,email

# Advanced Settings
ENABLE_PREDICTIVE_ANALYSIS=false
ENABLE_AUTO_OPTIMIZATION=false
ENABLE_SELF_HEALING=false
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Resource Limits
MAX_MEMORY_MB=2048
MAX_EXECUTION_TIME=1800  # 30 minutes
MAX_FILE_SIZE_KB=1024

# Backup Settings
BACKUP_BEFORE_BUILD=true
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true

# Rollback Settings
AUTO_ROLLBACK_ON_TEST_FAILURE=true
AUTO_ROLLBACK_ON_BUILD_FAILURE=true
ROLLBACK_TIMEOUT=120  # 2 minutes
