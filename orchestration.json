{
  "version": "2.0.0",
  "name": "ShuleLabs AI Orchestration",
  "description": "Production-ready autonomous development system",
  
  "phases": [
    {
      "id": 0,
      "name": "Pre-Flight Validation",
      "duration_target_seconds": 30,
      "enabled": true,
      "critical": true,
      "tasks": [
        "check_php_version",
        "check_php_extensions",
        "test_database_connection",
        "check_disk_space",
        "validate_git_state",
        "scan_reserved_keywords",
        "check_file_permissions",
        "validate_composer"
      ],
      "auto_fix": ["permissions", "extensions"]
    },
    {
      "id": 1,
      "name": "Database-First Foundation",
      "duration_target_seconds": 120,
      "enabled": true,
      "critical": true,
      "tasks": [
        "backup_database",
        "run_migrations",
        "verify_schema",
        "seed_data",
        "reverse_engineer_models"
      ],
      "rollback_on_failure": true
    },
    {
      "id": 2,
      "name": "Test-Driven Development",
      "duration_target_seconds": 180,
      "enabled": true,
      "critical": false,
      "tasks": [
        "generate_test_specs",
        "create_test_files",
        "run_tests",
        "measure_coverage"
      ],
      "quality_gates": {
        "min_coverage": 85,
        "max_failures": 0
      }
    },
    {
      "id": 3,
      "name": "Progressive Feature Building",
      "duration_target_seconds": 900,
      "enabled": true,
      "critical": false,
      "tasks": [
        "micro_iterations",
        "continuous_validation",
        "parallel_tracks",
        "incremental_commits"
      ],
      "validation_interval_seconds": 300
    },
    {
      "id": 4,
      "name": "Continuous Integration",
      "duration_target_seconds": 120,
      "enabled": true,
      "critical": true,
      "tasks": [
        "run_full_test_suite",
        "static_analysis",
        "security_scan",
        "performance_test",
        "validate_quality_gates"
      ],
      "quality_gates": {
        "coverage": 85,
        "complexity": 10,
        "duplication": 3,
        "security": "A"
      }
    },
    {
      "id": 5,
      "name": "Staged Deployment",
      "duration_target_seconds": 120,
      "enabled": true,
      "critical": false,
      "tasks": [
        "provision_staging",
        "deploy_application",
        "run_e2e_tests",
        "load_testing",
        "health_check"
      ],
      "rollback_on_failure": true
    },
    {
      "id": 6,
      "name": "Intelligence & Monitoring",
      "duration_target_seconds": null,
      "enabled": true,
      "critical": false,
      "tasks": [
        "generate_reports",
        "setup_monitoring",
        "configure_alerts",
        "enable_self_healing"
      ],
      "continuous": true
    }
  ],
  
  "quality_standards": {
    "code_style": "PSR-12",
    "type_hints": "required",
    "documentation": "92%",
    "security": "OWASP Top 10",
    "performance": {
      "api_response_p95": 200,
      "database_queries_max": 10
    }
  },
  
  "ai_agents": {
    "alpha": {
      "name": "Core Features Agent",
      "features": ["auth", "admin"],
      "parallel": true
    },
    "beta": {
      "name": "Academic Features Agent",
      "features": ["teacher", "student"],
      "parallel": true
    },
    "gamma": {
      "name": "Financial Features Agent",
      "features": ["finance", "hr"],
      "parallel": true
    },
    "delta": {
      "name": "Communication Features Agent",
      "features": ["parent", "messaging"],
      "parallel": true
    }
  },
  
  "success_criteria": {
    "execution_time_max_minutes": 20,
    "test_coverage_min_percent": 85,
    "code_quality_grade": "A",
    "security_grade": "A+",
    "data_integrity_min_percent": 100,
    "deployment_success": true
  },
  
  "notifications": {
    "channels": ["console", "log"],
    "events": ["phase_complete", "error", "quality_gate_failed", "deployment_complete"]
  },
  
  "metadata": {
    "created": "2025-11-23",
    "validated_on_project": "ShuleLabs CI4",
    "success_rate": "116%",
    "production_ready": true
  }
}
